<widget xmlns="http://www.w3.org/ns/widgets" 
        xmlns:rim="http://www.blackberry.com/ns/widgets" 
        version="1.0.0" 
        id="webWorkers" 
        xml:lang="en" >

  <name>My Algonquin Life</name>
  <description>mad9131 - FINAL</description>
  <author href="http://www.example.com/">Alex Fournier</author>
  <content src="index.html"/>
  <icon src="images/idLogo.png"/>

  <rim:permissions>
    <rim:permit>access_pimdomain_calendars</rim:permit> 
    <rim:permit>access_pimdomain_contacts</rim:permit>
    <rim:permit>use_camera</rim:permit> 
    <rim:permit>access_shared</rim:permit>
    <rim:permit>run_when_backgrounded</rim:permit>
    <rim:permit>access_location_services</rim:permit>
  </rim:permissions>

  <feature id="blackberry.invoke" required="true" version="1.0.0.0"/>
  <feature id="blackberry.invoke.card" required="true" version="1.0.0.0"/>
  <feature id="blackberry.invoked" required="true" version="1.0.0.0"/>
  <feature id="blackberry.pim.contacts" />
  <feature id="blackberry.pim.calendar" />
  <feature id="blackberry.system" required="true" version="1.0.0.0"/>
  <feature id="blackberry.sensors" required="true" version="1.0.0.0"/>
  <feature id="blackberry.io" />
  
  <feature id="blackberry.app" required="true" version="1.0.0.0">
    <param name="backgroundColor" value="0xff262626" />
    <param name="orientation" value="portrait" />
  </feature>
  
  <access uri="*" subdomains="true" />

</widget>